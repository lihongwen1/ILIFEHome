<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/shape_bg_dialog"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_dialog_title"
            style="@style/Text_16sp_33"
            android:layout_marginTop="@dimen/dp_24"
            android:gravity="center"
            android:text="@string/open_gps_location"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_dialog_hint_tip"
            style="@style/Text_14sp_ac"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_marginEnd="@dimen/dp_16"
            android:gravity="center"
            android:text="@string/open_gps_location_tip"
            />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_normal"
        android:layout_marginStart="@dimen/dp_24"
        android:layout_marginEnd="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_24"
        android:layout_marginBottom="@dimen/dp_16"
        android:layout_height="@dimen/dp_48"
        android:layout_width="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_dialog_left"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_40"
            android:layout_weight="1"
            android:background="@drawable/shape_bg_color"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="@string/personal_aty_cancel"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16" />

        <Space
            android:layout_width="@dimen/dp_16"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/tv_dialog_right"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_40"
            android:layout_weight="1"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="@string/dialog_del_confirm"
            android:textColor="@color/color_theme"
            android:background="@drawable/shape_bg_gray"
            android:textSize="@dimen/sp_16" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_dialog_mid"
        android:layout_width="@dimen/dp_120"
        android:layout_margin="@dimen/dp_24"
        android:layout_height="@dimen/dp_48"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/shape_bg_color"
        android:gravity="center"
        android:includeFontPadding="false"
        android:text="@string/dialog_del_confirm"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_16"
        android:visibility="gone" />
</LinearLayout>