<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_gradient_map_bg"
    android:orientation="vertical">

    <include layout="@layout/template_top_title" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">


        <com.ilife.home.robot.view.MapView
            android:id="@+id/mv_history_detail"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/tv_history_date"
            style="@style/Text_14sp_ff"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_12"
            android:text="2019/06/14  17:17" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_shape_top_radius"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_16"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_lean_area"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="38m"
                    android:textColor="@color/color_theme"
                    android:textSize="@dimen/sp_24" />

                <TextView
                    style="@style/Text_14sp_66"
                    android:layout_marginTop="@dimen/dp_4"
                    android:text="@string/setting_aty_area" />


            </LinearLayout>

            <View
                android:layout_width="@dimen/dp_1"
                android:layout_height="@dimen/dp_40"
                android:layout_marginStart="@dimen/dp_26"
                android:layout_marginEnd="@dimen/dp_26"
                android:background="@color/bg_color_f5f7fa" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_clean_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12分钟"
                    android:textColor="@color/color_theme"
                    android:textSize="@dimen/sp_24" />

                <TextView
                    style="@style/Text_14sp_66"
                    android:layout_marginTop="@dimen/dp_4"
                    android:text="@string/map_aty_time" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_14"
            android:layout_marginBottom="@dimen/dp_16"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_cleaning_flag"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:src="@drawable/annal_icon_finish" />

            <TextView
                android:id="@+id/tv_end_reason"
                style="@style/Text_14sp_33"
                android:layout_marginStart="@dimen/dp_8"
                android:text="@string/setting_aty_end_reason"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>