<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/template_top_title" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shape_gradient_map_bg">

        <com.ilife.home.robot.view.MapView
            android:id="@+id/map_clean_area"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_clean_area_time"
                android:layout_gravity="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_20"
                android:layout_marginBottom="@dimen/dp_20"
                android:src="@drawable/operation_btn_fre_1" />

            <RadioGroup
                android:id="@+id/rg_clean_area"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_margin="@dimen/dp_12"
                android:background="@drawable/bg_shape_radius_16"
                android:orientation="horizontal"
                android:paddingTop="@dimen/dp_14"
                android:paddingBottom="@dimen/dp_14">

                <RadioButton
                    android:button="@null"
                    android:id="@+id/tv_clean_area_do_map"
                    style="@style/map_text_button"
                    android:drawableTop="@drawable/selector_select_map"
                    android:text="@string/map_move_map" />
                <RadioButton
                    android:button="@null"
                    android:id="@+id/tv_do_clean_area"
                    style="@style/map_text_button"
                    android:drawableTop="@drawable/selector_operation_btn_edit"
                    android:text="@string/map_status_clean_area" />
            </RadioGroup>
        </LinearLayout>
    </FrameLayout>

</LinearLayout>