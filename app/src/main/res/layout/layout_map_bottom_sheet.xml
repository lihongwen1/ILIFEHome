<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/map_bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:behavior_hideable="false"
        app:behavior_peekHeight="@dimen/dp_170"
        app:layout_behavior="@string/bottom_sheet_behavior">

        <FrameLayout
            android:id="@+id/fl_clean_times"
            android:layout_width="@dimen/dp_48"
            android:layout_height="@dimen/dp_48"
            android:layout_gravity="end"
            android:layout_marginEnd="@dimen/dp_20"
            android:layout_marginBottom="@dimen/dp_20"
            android:background="@drawable/operation_btn_fre"
            android:visibility="invisible">

            <TextView
                android:id="@+id/tv_cleaned_times"
                style="@style/Text_12sp_33"
                android:layout_marginStart="@dimen/dp_14"
                android:layout_marginTop="@dimen/dp_6"
                android:text="1"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_setting_times"
                style="@style/Text_12sp_33"
                android:layout_gravity="end|bottom"
                android:layout_marginEnd="@dimen/dp_14"
                android:layout_marginBottom="6dp"
                android:text="3"
                android:textColor="@color/color_e2" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_shape_top_radius_gray_16"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_shape_radius_16">

                <ImageView
                    android:id="@+id/iv_operation_help"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_8"
                    android:layout_marginTop="@dimen/dp_8"
                    android:src="@drawable/operation_icon_help" />

                <ImageView
                    android:id="@+id/iv_extension"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dp_8"
                    android:src="@drawable/selector_extension_icon" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_100"
                    android:layout_below="@id/iv_extension"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_bottom_recharge"
                        style="@style/map_text_button"
                        android:drawableTop="@drawable/selector_recharge"
                        android:text="@string/map_aty_recharge"
                        android:visibility="visible" />

                    <LinearLayout
                        android:id="@+id/ll_map_start"
                        android:gravity="center_horizontal"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/iv_map_start"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/image_start_bg" />

                        <TextView
                            android:layout_marginTop="@dimen/dp_8"
                            android:id="@+id/tv_start_x9"
                            style="@style/Text_14sp_33"
                            android:text="@string/map_aty_start" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_control_x9"
                        style="@style/map_text_button"
                        android:drawableTop="@drawable/selector_control"
                        android:text="@string/map_aty_remote" />
                </LinearLayout>
            </RelativeLayout>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_bottom_sheet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/dp_24" />
        </LinearLayout>
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>