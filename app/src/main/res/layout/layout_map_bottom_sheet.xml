<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/map_bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_shape_top_radius_gray_16"
        android:orientation="vertical"
        app:behavior_hideable="false"
        app:behavior_peekHeight="@dimen/dp_114"
        app:layout_behavior="@string/bottom_sheet_behavior">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_shape_radius_16">

            <ImageView
                android:id="@+id/iv_operation_help"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_8"
                android:layout_marginTop="@dimen/dp_8"
                android:src="@drawable/operation_icon_help" />

            <ImageView
                android:id="@+id/iv_extension"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_8"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_8"
                android:src="@drawable/selector_extension_icon" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_100"
                android:layout_below="@id/iv_extension"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_bottom_recharge"
                    style="@style/map_text_button"
                    android:drawableTop="@drawable/selector_recharge"
                    android:text="@string/map_aty_recharge"
                    android:visibility="visible" />

                <LinearLayout
                    android:id="@+id/ll_map_start"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_map_start"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/image_start_bg" />

                    <TextView
                        android:id="@+id/tv_start_x9"
                        style="@style/Text_14sp_33"
                        android:layout_marginTop="@dimen/dp_8"
                        android:text="@string/map_aty_start" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_control_x9"
                    style="@style/map_text_button"
                    android:drawableTop="@drawable/selector_control"
                    android:text="@string/map_aty_remote" />
            </LinearLayout>
        </RelativeLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_bottom_sheet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/dp_24" />
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>