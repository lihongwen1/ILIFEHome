<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_guide_next2"
        style="@style/Text_18sp_33"
        android:layout_width="@dimen/dp_140"
        android:layout_height="@dimen/dp_48"
        android:layout_gravity="center"
        android:background="@drawable/shape_bg_white_stroke"
        android:gravity="center"
        android:text="@string/guide_start"
        android:textColor="@color/color_ff" />

    <TextView
        android:text="@string/guide_tip_for_more_function"
        android:layout_gravity="bottom|center"
        style="@style/Text_14sp_ff"
        android:layout_marginBottom="@dimen/dp_120" />
    <ImageView
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="@dimen/dp_80"
        android:layout_marginBottom="@dimen/dp_32"
        android:src="@drawable/operation_icon_gesture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</FrameLayout>