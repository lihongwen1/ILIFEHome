<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color_f5f7fa"
    android:orientation="vertical">

    <include layout="@layout/template_top_title" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.scwang.smartrefresh.layout.SmartRefreshLayout
            android:id="@+id/refresh_map"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible">
            <com.ilife.home.robot.view.SlideRecyclerView
                android:id="@+id/rv_save_map"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp_24" />
        </com.scwang.smartrefresh.layout.SmartRefreshLayout>


        <LinearLayout
            android:visibility="gone"
            android:id="@+id/ll_no_map"
            android:layout_width="@dimen/dp_200"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_20"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/pic_no_map" />

            <TextView
                style="@style/Text_14sp_99"
                android:layout_marginTop="@dimen/dp_8"
                android:text="@string/map_tip_no_map_yet" />
        </LinearLayout>
    </FrameLayout>
</LinearLayout>