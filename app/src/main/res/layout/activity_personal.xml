<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_bg_user"

    android:orientation="vertical">

    <include layout="@layout/template_top_title" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_48"
        android:background="@drawable/bg_shape_top_radius">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_user_information"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_120"
                android:layout_marginStart="@dimen/dp_24">

                <ImageView
                    android:id="@+id/image_avatar"
                    android:layout_width="@dimen/dp_60"
                    android:layout_height="@dimen/dp_60"
                    android:layout_centerVertical="true"
                    android:background="@drawable/n_icon_portrait" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_16"
                    android:layout_toEndOf="@id/image_avatar"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_userName"
                        style="@style/Text_16sp_33"
                        android:text="@string/personal_aty_set_name"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_user_email"
                        style="@style/Text_14sp_33"
                        android:layout_marginTop="@dimen/dp_4"
                        android:text="email"
                        android:textColor="@color/color_c7c7c7" />

                </LinearLayout>

                <ImageView
                    style="@style/Image_Style_Forward"
                    android:layout_marginEnd="@dimen/dp_24" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_help"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_60"
                android:layout_marginStart="@dimen/dp_24"
                android:background="@color/white">

                <ImageView
                    android:id="@+id/image_help"
                    style="@style/Image_Style_24"
                    android:background="@drawable/n_icon_help" />

                <TextView
                    style="@style/Text_16sp_33"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_20"
                    android:layout_toEndOf="@+id/image_help"
                    android:text="@string/personal_aty_help"
                    android:textColor="@color/color_33" />

                <ImageView
                    style="@style/Image_Style_Forward"
                    android:layout_marginEnd="@dimen/dp_24" />
            </RelativeLayout>

            <View
                style="@style/View_Line_Style"
                android:layout_marginStart="@dimen/dp_70" />

            <RelativeLayout
                android:id="@+id/rl_scan"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_60"
                android:layout_marginStart="@dimen/dp_24"
                android:background="@color/white">

                <ImageView
                    android:id="@+id/image_scan"
                    style="@style/Image_Style_24"
                    android:background="@drawable/n_icon_scan" />

                <TextView
                    style="@style/Text_16sp_33"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_20"
                    android:layout_toEndOf="@+id/image_scan"
                    android:text="@string/personal_aty_scan"
                    android:textColor="@color/color_33" />

                <ImageView
                    style="@style/Image_Style_Forward"
                    android:layout_marginEnd="@dimen/dp_24" />
            </RelativeLayout>

            <View
                style="@style/View_Line_Style"
                android:layout_marginStart="@dimen/dp_70" />

            <RelativeLayout
                android:id="@+id/rl_share"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_60"
                android:layout_marginStart="@dimen/dp_24"
                android:background="@color/white">

                <ImageView
                    android:id="@+id/image_share"
                    style="@style/Image_Style_24"
                    android:background="@drawable/n_icon_shared" />

                <TextView
                    style="@style/Text_16sp_33"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_20"
                    android:layout_toEndOf="@+id/image_share"
                    android:text="@string/personal_aty_share"
                    android:textColor="@color/color_33" />

                <ImageView
                    android:id="@+id/image_forward"
                    style="@style/Image_Style_Forward"
                    android:layout_marginEnd="@dimen/dp_24" />
            </RelativeLayout>

            <View
                style="@style/View_Line_Style"
                android:layout_marginStart="@dimen/dp_70" />


            <RelativeLayout
                android:id="@+id/rl_protocol"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_60"
                android:layout_marginStart="@dimen/dp_24"
                android:background="@color/white">

                <ImageView
                    android:id="@+id/image_protocol"
                    style="@style/Image_Style_24"
                    android:background="@drawable/n_icon_protocol" />

                <TextView
                    style="@style/Text_16sp_33"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_20"
                    android:layout_toStartOf="@+id/image_forward_policy"
                    android:layout_toEndOf="@+id/image_protocol"
                    android:text="@string/user_agreement"
                    android:textColor="@color/color_33" />

                <ImageView
                    android:id="@+id/image_forward_policy"
                    style="@style/Image_Style_Forward"
                    android:layout_marginEnd="@dimen/dp_24" />
            </RelativeLayout>


            <View
                style="@style/View_Line_Style"
                android:layout_marginStart="@dimen/dp_70" />


            <RelativeLayout
                android:id="@+id/rl_app_authorization"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_60"
                android:layout_marginStart="@dimen/dp_24"
                android:background="@color/white"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/image_app_authorization"
                    style="@style/Image_Style_24"
                    android:background="@drawable/personal_icon_tmjl" />

                <TextView
                    style="@style/Text_16sp_33"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_20"
                    android:layout_toEndOf="@+id/image_app_authorization"
                    android:text="@string/personal_tiamao"
                    android:textColor="@color/color_33" />

                <ImageView
                    style="@style/Image_Style_Forward"
                    android:layout_marginEnd="@dimen/dp_24" />
            </RelativeLayout>

            <View
                style="@style/View_Line_Style"
                android:layout_marginStart="@dimen/dp_70" />


            <TextView
                android:id="@+id/bt_logout"
                style="@style/Text_16sp_33"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_48"
                android:layout_marginStart="@dimen/dp_24"
                android:layout_marginTop="@dimen/dp_36"
                android:layout_marginEnd="@dimen/dp_24"
                android:background="@drawable/bg_logout"
                android:gravity="center"
                android:text="@string/personal_acy_exit"
                android:textStyle="bold" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_16"
                android:gravity="center">

                <ImageView
                    android:id="@+id/image_version"
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_24"
                    android:layout_centerVertical="true"
                    android:background="@drawable/n_icon_version" />

                <TextView
                    android:id="@+id/tv_version"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_5"
                    android:layout_toEndOf="@+id/image_version"
                    android:text="@string/personal_aty_version"
                    android:textColor="@color/color_ac" />
            </RelativeLayout>

            <LinearLayout
                android:visibility="invisible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_16"
                android:layout_marginBottom="@dimen/dp_24"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_user_agreement"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/personal_aty_protocol_agreement"
                    android:textColor="@color/color_theme"
                    android:textSize="@dimen/dp_14" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="@dimen/dp_12"
                    android:layout_marginStart="@dimen/dp_16"
                    android:layout_marginEnd="@dimen/dp_16"
                    android:background="@color/color_ac" />

                <TextView
                    android:id="@+id/tv_protocol_privacy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/personal_aty_protocol_privacy"
                    android:textColor="@color/color_theme"
                    android:textSize="@dimen/dp_14" />

            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

</LinearLayout>