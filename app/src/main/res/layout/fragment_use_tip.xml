<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingStart="@dimen/dp_24"
    android:paddingTop="@dimen/dp_24"
    android:paddingEnd="@dimen/dp_24">

    <ImageView
        android:id="@+id/iv_use_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/pic_arrange" />

    <TextView
        android:id="@+id/tv_use_tip_title"
        style="@style/Text_16sp_33"
        android:layout_marginTop="@dimen/dp_24"
        android:text="@string/use_tip_lean_environment"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/ll_use_tip1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_24"
        android:orientation="horizontal">

        <TextView
            style="@style/Text_14sp_ff"
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"
            android:background="@drawable/shape_circle_color_theme"
            android:gravity="center"
            android:text="1" />

        <TextView
            android:id="@+id/tv_use_tip1"
            style="@style/Text_14sp_33"
            android:layout_marginStart="@dimen/dp_8" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_use_tip2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_24"
        android:orientation="horizontal">

        <TextView
            style="@style/Text_14sp_ff"
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"
            android:background="@drawable/shape_circle_color_theme"
            android:gravity="center"
            android:text="2" />

        <TextView
            android:id="@+id/tv_use_tip2"
            style="@style/Text_14sp_33"
            android:layout_marginStart="@dimen/dp_8" />
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/tv_i_know"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginStart="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_44"
        android:layout_marginEnd="@dimen/dp_30"
        android:layout_marginBottom="@dimen/dp_30"
        android:background="@drawable/n_all_bt_bg"
        android:gravity="center"
        android:text="@string/tip_i_know"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_16" />
</LinearLayout>