<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/dp_335"
            android:layout_height="@dimen/dp_260"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardCornerRadius="16dp"
            app:cardElevation="@dimen/dp_2"
            app:cardPreventCornerOverlap="false"
            app:cardUseCompatPadding="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/dp_20">


                <TextView
                    android:id="@+id/tv_map_name"
                    style="@style/Text_16sp_33"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_save_map_time"
                    style="@style/Text_12sp_33"
                    android:layout_marginTop="@dimen/dp_4"
                    />

                <com.ilife.home.robot.view.MapView
                    android:id="@+id/mv_save_map"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_weight="1" />

                <TextView
                    android:visibility="invisible"
                    android:id="@+id/tv_apply_this_map"
                    style="@style/Text_14sp_them_color"
                    android:layout_marginTop="@dimen/dp_20"
                    android:background="@drawable/selector_theme_cocor_rectangle"
                    android:paddingStart="@dimen/dp_30"
                    android:paddingTop="@dimen/dp_10"
                    android:paddingEnd="@dimen/dp_30"
                    android:paddingBottom="@dimen/dp_10"
                    android:textColor="@drawable/selector_color_theme_white" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </FrameLayout>

    <ImageView
        android:id="@+id/iv_delete_map"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/dp_20"
        android:src="@drawable/icon_unbind_debice" />
</LinearLayout>





