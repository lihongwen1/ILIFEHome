<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/shape_bg_dialog"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_24"
        android:gravity="center_horizontal"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tv_et_input_title"
            style="@style/Text_16sp_33"
            android:gravity="center"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/et_input_value"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_marginStart="@dimen/dp_24"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_marginEnd="@dimen/dp_24"
            android:background="@drawable/shape_setting_name_bg"
            android:inputType="text"
            android:paddingStart="@dimen/dp_16"
            android:paddingEnd="@dimen/dp_16"
            android:textColor="@color/color_33"
            android:textSize="@dimen/sp_14" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_normal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:layout_marginStart="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_24"
        android:layout_marginEnd="@dimen/dp_24"
        android:layout_marginBottom="@dimen/dp_16"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_dialog_left"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_40"
            android:layout_weight="1"
            android:background="@drawable/shape_bg_gray"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="@string/personal_aty_cancel"
            android:textColor="@color/color_theme"
            android:textSize="@dimen/sp_16" />

        <Space
            android:layout_width="@dimen/dp_16"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/tv_dialog_right"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_40"
            android:layout_weight="1"
            android:background="@drawable/shape_bg_color"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="@string/dialog_del_confirm"
            android:textColor="@color/white"

            android:textSize="@dimen/sp_16" />
    </LinearLayout>
</LinearLayout>